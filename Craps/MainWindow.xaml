<Window x:Class="Craps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Craps"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="pointBox" HorizontalAlignment="Left" Margin="251,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="outcomeBox" HorizontalAlignment="Left" Margin="251,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="winBox" HorizontalAlignment="Left" Margin="464,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="resultText" HorizontalAlignment="Left" Margin="351,242,0,0" Text="Result:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Left" Margin="509,95,0,0" VerticalAlignment="Top" Click="playGame"/>
        <Button x:Name="rollButton" Content="Roll" HorizontalAlignment="Left" Margin="509,139,0,0" VerticalAlignment="Top" Click="rollClicked" IsEnabled="False"/>

    </Grid>
</Window>
